md-dialog.incident-details(aria-label='Incident {{vm.item.number.display_value}}')
  form(ng-cloak='')
    md-toolbar
      .md-toolbar-tools
        i.material-icons warning
        h2
          span Incident
          | {{vm.item.number.display_value}}
        span(flex='')
        md-button.md-icon-button(ng-click='vm.cancel()')
          i.material-icons close
    md-dialog-content
      .md-dialog-content
        .row
          .col-large-6
            .col-12.incident-details__label Description
            .col-12 {{vm.item.description.display_value}}
          .col-large-6
            .row
              .col-6
                .col-12.incident-details__label Caller
                .col-12 {{vm.item.caller_id.display_value}}
              .col-6
                .col-12.incident-details__label Opened
                .col-12 {{vm.item.opened_at.display_value}}
            .row
              .col-6
                .col-12.incident-details__label Urgency
                .col-12
                  span.badge.badge--black {{vm.item.urgency.value}}
              .col-6
                .col-12.incident-details__label Sate
                .col-12
                  span.badge.badge--gray {{vm.item.state.display_value}}
